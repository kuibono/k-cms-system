<?xml version="1.0" encoding="utf-8"?>
<ArrayOfCollectRule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <CollectRule>
    <IsImageSite>true</IsImageSite>
    <IsDefault>false</IsDefault>
    <SiteName>落秋网</SiteName>
    <Url>http://www.luoqiu.com/</Url>
    <CharSet>gbk</CharSet>
    <SearchPageUrl>http://www.luoqiu.com/modules/article/search.php</SearchPageUrl>
    <SearchPars>searchkey={0}&amp;searchtype=articlename</SearchPars>
    <SearchMethod>get</SearchMethod>
    <BookInfoUrl>&lt;h2&gt;《&lt;b&gt;&lt;a href=\"(?&lt;url&gt;.*?)\" target=\"_blank\"&gt;.*?&lt;/a&gt;&lt;/b&gt;》</BookInfoUrl>
    <BookInfoRule />
    <ChapterListUrl>&lt;a class=\".*?\" href=\"(?&lt;url&gt;.*?)\" target=\"_blank\" title=\".*?\"&gt;&lt;span&gt;点击阅读&lt;/span&gt;&lt;/a&gt;</ChapterListUrl>
    <ChapterNameAndUrl>&lt;span&gt;&lt;a href=\"(?&lt;url&gt;.*?)\"&gt;(?&lt;title&gt;.*?)&lt;/a&gt;&lt;/span&gt;</ChapterNameAndUrl>
    <ChapterContent>&lt;DIV id=content name=\"content\"&gt;(?&lt;content&gt;[\s\S]*?)&lt;/DIV&gt;</ChapterContent>
    <ImageRule>&lt;img src="(?&lt;key&gt;.*?)" border="0" class="imagecontent"&gt;</ImageRule>
  </CollectRule>
  <CollectRule>
    <IsImageSite>false</IsImageSite>
    <IsDefault>false</IsDefault>
    <SiteName>无错小说网</SiteName>
    <Url>http://www.wcxiaoshuo.com/</Url>
    <CharSet>gbk</CharSet>
    <SearchPageUrl>http://www.wcxiaoshuo.com/modules/article/search.php</SearchPageUrl>
    <SearchPars>searchkey={0}&amp;searchtype=articlename</SearchPars>
    <SearchMethod>post</SearchMethod>
    <BookInfoUrl>td class="odd"&gt;&lt;a href="(?&lt;url&gt;.*?)"&gt;(?&lt;title&gt;.*?)&lt;/a&gt;&lt;/td&gt;</BookInfoUrl>
    <BookInfoRule />
    <ChapterListUrl>&lt;a href="(?&lt;url&gt;[^"']*?)" title="开始阅读"&gt;&lt;span&gt;开始阅读&lt;/span&gt;&lt;/a&gt;</ChapterListUrl>
    <ChapterNameAndUrl>&lt;li.*?&gt;&lt;a.*?href="(?&lt;url&gt;.*?)"&gt;(?&lt;title&gt;.+?)&lt;/a.*?&gt;&lt;/li.*?&gt;</ChapterNameAndUrl>
    <ChapterContent>&lt;div id="htmlContent" class="contentbox" &gt;[\s]*?&lt;div align="center"&gt;&lt;script type="text/javascript" src="/js/nrh.js"&gt;&lt;/script&gt;&lt;/div&gt;(?&lt;content&gt;[\s\S]*?)&lt;/div&gt;</ChapterContent>
    <ImageRule />
  </CollectRule>
</ArrayOfCollectRule>